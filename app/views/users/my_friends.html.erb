<%= turbo_frame_tag 'turbo_friend' do %>
  <%= render "layouts/messages" %>
  <div class="search-area">
    <h3>Search Friends</h3>
    <%= form_tag(search_friend_path, method: :get) do %>
      <div class="form-group row">
        <div class="col-sm-9">
          <%= text_field_tag :friend, params[:friend], placeholder: "Name or email", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-3 search-button">
          <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%#= button_tag type: :submit, class: "btn btn-success", data: { turbo: false } do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <br /><br />
  <% unless @friends.blank? %>
    <%= render 'friends/list' %>
  <% end %>
  <br /><br />
<% end %>

