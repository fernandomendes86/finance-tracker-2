<h1>My Portfolio</h1>
<hr>
<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag(search_stock_path, method: :get) do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
        <%#= button_tag type: :submit, class: "btn btn-success", data: { turbo: false } do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<% if @stock %>
  <div class="card card-header mt-2", style="display: inline-block;">
    <strong>Symbol: </strong> <%= @stock.ticker.upcase %>
    <strong>Name: </strong> <%= @stock.name.capitalize %>
    <strong>Price: </strong> <%= number_to_currency(@stock.last_price) %>
  </div>
<% elsif @stock_errors %>
  <div class="card card-header mt-2", style="display: inline-block;">
    <%= @stock_errors %> 
  </div>
<% end %>