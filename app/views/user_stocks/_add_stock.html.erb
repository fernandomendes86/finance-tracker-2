<% if current_user.can_track_stock?(stock.ticker) %>
  <%= link_to "Add to portfolio", user_stocks_path(user: current_user, ticker: stock.ticker.upcase, user_friend: @user), 
                                data: { turbo_method: :post }, class: "btn btn-sm btn-success" %>
<% else %>
  <span class="badge bg-secondary">
    You are already tracking <%= blocking_message_to_stock(stock) %>
  </span>
<% end %>